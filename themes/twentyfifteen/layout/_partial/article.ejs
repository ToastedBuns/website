    <div id="mc_embed_signup_scroll">
	<label for="mce-EMAIL">Subscribe to our mailing list</label>
	<input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_1668e38f53f1b4c4bd5e25291_32fad6988d" tabindex="-1" value=""></div>
    <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
    </div>
</form>
</div>

<!--End mc_embed_signup-->
			<% } %>
			
		</div><!-- .entry-content -->
		<% if (!index && theme.artical_license_statement){ %>
			<div class="entry-content">
				<%= theme.artical_license_statement %>
			</div>
		<% } %>
		<% if (!index && post.comments){ %>
			<div class="entry-comments">
				<%- partial('article-comments', {post: post}) %>
			</div>
		<% } %>
		<footer class="entry-footer">
			<%- partial('article-footer', {post: post}) %>
		</footer><!-- .entry-footer -->
</article>
<%- partial('components/back-top') %>